<%= provide(:title, "Profile") %>
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <h1>
      User Management |
      <small>Profile</small>
    </h1>
    <ol class="breadcrumb">
      <%= link_to "<i class='fa fa-dashboard'></i> ".html_safe + render_breadcrumbs %>
    </ol>
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="row">
      <!-- left column -->
      <div class="col-md-12">
        <!-- general form elements -->
        <div class="box box-primary">
          <div class="box-header with-border">
            <h3 class="box-title"><%= @user.name %>'s Profile</h3>
          </div>
          <% flash.each do |message_type, message| %>
            <div class="alert alert-<%= message_type %>"><%= message %></div>
          <% end %>
          <!-- /.box-header -->
          <!-- form start -->
          <form role="form">
          <div class="box-body">
            <div class="form-group col-md-6">
              <label for="exampleInputEmail1">Full Name</label>
              <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-user"></i></span>
                <p class="form-control form-control-static"><%= @user.name %></p>
              </div>
            </div>
            <div class="form-group col-md-6">
              <label for="exampleInputEmail1">Email address</label>
              <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
                <p class="form-control form-control-static"><%= @user.email %></p>
              </div>
              <!-- <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Enter email"> -->
            </div>
            <div class="form-group col-md-6">
              <label>Status</label>
              <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-book"></i></span>
                <p class="form-control form-control-static"><%= @user.status.titleize %></p>
              </div>

            </div>
            <div class="form-group col-md-6">
              <label>Gender</label>
              <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-genderless"></i></span>
                <p class="form-control form-control-static"><%= @user.gender.titleize %></p>
              </div>

            </div>

            <div class="form-group col-md-6">
              <label>Phone Number</label>
              <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-phone"></i></span>
                <p class="form-control form-control-static"><%= number_to_phone(@user.phone, country_code: 62, delimiter: "-")%></p>
              </div>
              <!-- /.input group -->
            </div>
          </div>
          </form>
        </div>
        <!-- /.box -->
      </div>
      <div class="clearfix"></div>
      <!--/.col (left) -->
    </div>
  </section>
  <!-- /.content -->
</div>
