<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <h1>
      User Management | <small> Add, Delete, Edit</small>
    </h1>
    <ol class="breadcrumb">
      <%= link_to "<i class='fa fa-dashboard'></i> ".html_safe + render_breadcrumbs %>
      <!-- <li><a href="#"><i class="fa fa-dashboard"></i> Level</a></li>
      <li class="active">Here</li> -->
    </ol>
  </section>

  <!-- Main content -->
  <section class="content">
    <!-- <h1>Users#index</h1>
    <p>Find me in app/views/users/index.html.erb</p> -->
    <!-- Your Page Content Here -->


    <div class="row">
      <div class="col-xs-12">
        <div class="box">
          <div class="box-header">
            <h3 class="box-title">All User of Royal Cokelat</h3>
            <%= link_to "Add User", users_add_path, class: "btn btn-success btn-sm pull-right", style: "margin-right: 30px;" %>

          </div>
          <% flash.each do |message_type, message| %>
            <div class="alert alert-<%= message_type %>"><%= message %></div>
          <% end %>
          <!-- /.box-header -->
          <div class="box-body">

            <table id="example1" class="table table-bordered table-striped">
              <thead>
              <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Contact</th>
                <th>Action</th>
              </tr>
              </thead>
              <tbody>
                <% @user.each do |users| %>
              <tr>
                <td><%= users.name %></td>
                <td><%= users.email %></td>
                <td><%= number_to_phone(users.phone, country_code: 62, delimiter: "-")%></td>
                <td>
                  <%= link_to "Edit User", users_edit_url(users), class: "btn btn-info btn-xs", method: :get %>
                  <%= link_to "Delete", users, class: "btn btn-danger btn-xs", method: :delete, data: {confirm: "Are you sure to delete this user?"} %>
                </td>
              </tr>
               <% end %>
              </tbody>
              <tfoot>
              <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Contact</th>
                <th>Action</th>
              </tr>
              </tfoot>
            </table>
          </div>
          <!-- /.box-body -->
        </div>
        <!-- /.box -->
      </div>
      <!-- /.col -->
    </div>


  </section>
  <!-- /.content -->
</div>

<script>
  $(function () {
    $("#example1").dataTable();
    $('#example2').dataTable({
      "paging": true,
      "lengthChange": false,
      "searching": false,
      "ordering": true,
      "info": true,
      "autoWidth": false,
      "responsive": true
    });
  });
</script>
